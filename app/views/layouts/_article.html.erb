<ul class="list-unstyled">
  <% articles.each do |article| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(article.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to article.user.name, user_path(article.user) %> <span class="text-muted">posted at <%= article.created_at %></span>
        </div>
        <div>
          <p><%= link_to article.title, edit_article_path(article) %></p>
          <p>
            <% if article.img? %>
            <%= image_tag article.img.url %>
            <% end %>
          </p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate articles %>
</ul>