<ul class="list-unstyled">
  <% articles.each do |article| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <%= article.user.name %> <span class="text-muted">posted at <%= article.created_at %></span>
        </div>
        <div>
          <% if current_user == article.user %>
            <p><%= link_to article.title, edit_article_path(article) %></p>
          <% else %>
            <p><%= link_to article.title, article_path(article) %></p>
          <% end %>
          <p>
            <% if article.img? %>
              <%= image_tag article.img.url %>
            <% end %>
          </p>
        </div>
          <% if current_user == article.user %>
            <%= link_to "Delete", article, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
      </div>
    </li>
  <% end %>
  <%= paginate articles %>
</ul>