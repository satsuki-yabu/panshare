<ul class="list-unstyled">
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(@article.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= @article.user.name %> <span class="text-muted">posted at <%= @article.created_at %></span>
        </div>
        <div>
          <p><%= @article.title %></p>
          <p><%= @article.text %></p>
          <p>
            <% if @article.img? %>
            <%= image_tag @article.img.url, class: "img-responsive center-block", :alt => ""  %>
            <% else %>
            <%= image_tag "/assets/icon_002640_256.png", class: "img-responsive center-block", size:'300x300', :alt => "" %>
            <% end %>
          </p>
        </div>
      </div>
    </li>
    <li>
      <% if current_user == @article.user %>
      <%= link_to "編集する", edit_article_path(@article), class: 'btn btn-success btn-sm' %>
      <% end %>
    </li>
    <li>
    <%= render 'favorites/favorite_button', article: @article, user: @user %>
    </li>
</ul>

