<ul class="list-unstyled">
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(@article.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= @article.user.name %> <span class="text-muted">posted at <%= @article.created_at %></span>
        </div>
        <div>
          <p><%= @article.title %></p>
          <p><%= @article.text %></p>
          <p>
            <% if @article.img? %>
            <%= image_tag @article.img.url %>
            <% end %>
          </p>
        </div>
      </div>
    </li>
</ul>
 <%= render 'favorites/favorite_button', article: @article, user: @user %>