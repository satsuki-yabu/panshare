<% if logged_in? %>
  <aside>
    <%= form_with(model: article, multipart: true, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <button type="submit" class="btn btn-outline-primary">登録</button>
    
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
          <small id="title-tip" class="form-text text-muted">
            タイトルを入力してください。
          </small>
      </div>
          
      <div class="form-group">
        <%= f.label :text, '内容' %>
        <%= f.text_area :text, class: 'form-control', rows:10 %>
          <small id="text-tip" class="form-text text-muted">
            内容を入力してください。 
          </small>
      </div>
          
      <div>
        <%= f.label "画像をアップロード" %><br />
        <%= f.file_field :img, id: :article_img, class: "image" %>
      </div>
      
      <small id="submit-tip" class="form-text text-muted">
      </small>
      
    <% end %>
  </aside>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the panshare</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
    